  <script src="/static/js/reconnecting-websocket.min.js"></script>
  <script>
  var  socket = null;
  var  usernameFormField = document.getElementById("username");
  document.addEventListener("DOMContentLoaded", function () {
     socket = new ReconnectingWebSocket("ws://127.0.0.1:8080/ws", null, {debug: true, reconectInterval: 3000});

       socket.onopen = () => {
            console.log("Successfully connected");
           
        }

        socket.onclose = () => {
            console.log("connection closed");
       
        }

        socket.onerror = error => {
            console.log("there was an error");
        
        }

       socket.onmessage = msg => {
           let data = JSON.parse(msg.data);
           console.log("the data", data);
           switch (data.action) {
               case "online_users":
                   var ul = document.getElementById("online_users");
                   while (ul.firstChild) ul.removeChild(ul.firstChild); // remove child

                   var connectedUsers = data.connected_users
                   if (connectedUsers.length > 0) {
                        for (let i = 0; i < connectedUsers.length; i++) { 
                           if (connectedUsers[i].length > 0){
                                  var liItem =  '<li class="active bounceInDown">'+
                                              '<a  href="#" class="clearfix">'+
                                              '<img src="/static/img/p1.png" alt="" class="img-circle">'+
                                              '<div class="friend-name">'+
                                              '<strong>'+connectedUsers[i]+'</strong>' +
                                              '</div>' +
                                              '</a>'+
                                              '</li>'
                                ul.innerHTML += liItem
                           }
                         

                          }

                    }

           }
       }
     usernameFormField.addEventListener("change", function () {
            let jsonData = {};
            jsonData["action"] = "username";
            jsonData["username"] = this.value;
            socket.send(JSON.stringify(jsonData));
        })

     
      })
  </script>

